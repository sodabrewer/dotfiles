# vim:fileencoding=utf-8:foldmethod=marker

BEGIN_KITTY_THEME
# Ros√© Pine
include current-theme.conf
# END_KITTY_THEME

# BEGIN_KITTY_FONTS
font_family      family="Berkeley Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size 14.0
# END_KITTY_FONTS
# cursor #cccccc
# cursor_text_color #111111
cursor_shape block
cursor_shape_unfocussed hollow 

copy_on_select on

window_margin_width 0
window_padding_width 10 
window_border_width 1.0pt

enable_audio_bell no

mouse_hide_wait 0.5
open_url_with default
detect_urls yes
url_prefixes file ftp ftps gemini git gopher http https irc ircs kitty mailto news sftp ssh

modify_font cell_height 130%


# BEGIN_KITTY_THEME
# Argonaut
include current-theme.conf
# END_KITTY_THEME